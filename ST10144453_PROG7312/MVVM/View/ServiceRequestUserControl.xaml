<UserControl
    x:Class="ST10144453_PROG7312.MVVM.View.ServiceRequestUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ST10144453_PROG7312.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view_model="clr-namespace:ST10144453_PROG7312.MVVM.View_Model"
    d:DataContext="{d:DesignInstance Type=view_model:ServiceRequestViewModel}"
    d:DesignHeight="800"
    d:DesignWidth="1000"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ResourceDictionaries/GlobalStyles.xaml" />
                <ResourceDictionary Source="/ResourceDictionaries/ComboBoxStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Side Navigation -->
        <!--  Side Navigation Bar  -->
        <Grid Grid.Column="0">
            <!--  Rectangle with Curved Corners and Drop Shadow  -->
            <Rectangle
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          Fill="#B3FFFFFF"
          RadiusX="15"
          RadiusY="15">
                <Rectangle.Clip>
                    <RectangleGeometry
                  RadiusX="15"
                  RadiusY="15"
                  Rect="0,0,300,1080" />
                </Rectangle.Clip>
            </Rectangle>

            <!--  StackPanel with content, placed above the Rectangle  -->
            <StackPanel
          x:Name="ContentPanel"
          Width="300"
          Margin="0,0,0,0"
          HorizontalAlignment="Center"
          VerticalAlignment="Center"
          Panel.ZIndex="1">

                <StackPanel x:Name="ButtonStack" Margin="0,0,0,0">
                    <TextBlock
                  Margin="0,20,0,0"
                  HorizontalAlignment="Center"
                  FontSize="30"
                  FontWeight="Bold"
                  Text="Manage Mzansi" />

                    <Button
                  Width="280"
                  Height="90"
                  Margin="0,5"
                  Click="NavigateHome_Click"
                  Content="Back"
                  FontSize="30"
                        Background="Black"
                  Style="{StaticResource StandardButtonStyle}" />
                </StackPanel>
            </StackPanel>
        </Grid>

        <!--  Main Content  -->
        <ScrollViewer Grid.Column="1">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Header  -->
                <TextBlock
                    Margin="0,0,0,20"
                    FontSize="24"
                    FontWeight="Bold"
                    Text="Service Request Form" />

                <!--  Form Content  -->
                <StackPanel Grid.Row="1" Margin="0,10">
                    <!--  Personal Information Section  -->
                    <GroupBox Margin="0,0,0,20" Header="Personal Information">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <Label Content="First Name:" />
                                <TextBox
                                    Margin="0,0,0,10"
                                    Style="{StaticResource StandardTextBoxStyle}"
                                    Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" />

                                <Label Content="Email:" />
                                <TextBox
                                    Margin="0,0,0,10"
                                    Style="{StaticResource StandardTextBoxStyle}"
                                    Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <Label Content="Surname:" />
                                <TextBox
                                    Margin="0,0,0,10"
                                    Style="{StaticResource StandardTextBoxStyle}"
                                    Text="{Binding Surname, UpdateSourceTrigger=PropertyChanged}" />

                                <Label Content="Phone Number:" />
                                <TextBox
                                    Margin="0,0,0,10"
                                    Style="{StaticResource StandardTextBoxStyle}"
                                    Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                        </Grid>
                    </GroupBox>

                    <!--  Request Details Section  -->
                    <GroupBox Margin="0,0,0,20" Header="Request Details">
                        <StackPanel Margin="10">
                            <Label Content="Category:" />
                            <ComboBox
                                Height="40"
                                Margin="0,0,0,10"
                                ItemsSource="{Binding Categories}"
                                SelectedItem="{Binding Category, UpdateSourceTrigger=PropertyChanged}" />

                            <Label Content="Description:" />
                            <TextBox
                                Height="100"
                                Margin="0,0,0,10"
                                AcceptsReturn="True"
                                Style="{StaticResource StandardTextBoxStyle}"
                                Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                TextWrapping="Wrap" />


                            <Label Content="Address:" />
                            <TextBox
                                Margin="0,0,0,10"
                                Style="{StaticResource StandardTextBoxStyle}"
                                Text="{Binding AdditionalAddress, UpdateSourceTrigger=PropertyChanged}" />

                            <Label Content="Preferred Feedback Method:" />
                            <ComboBox
                                Height="40"
                                Margin="0,0,0,10"
                                ItemsSource="{Binding FeedbackMethods}"
                                SelectedItem="{Binding PreferredFeedbackMethod, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </GroupBox>

                    <!--  Supporting Documents Section  -->
                    <GroupBox Margin="0,0,0,20" Header="Supporting Documents">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Button
                                Grid.Column="0"
                                Width="200"
                                Height="40"
                                Margin="10"
                                HorizontalAlignment="Center"
                                Background="#2C2F80"
                                Click="Button_Click"
                                Command="{Binding AddMediaCommand}"
                                Content="Attach Evidence"
                                Style="{StaticResource StandardButtonStyle}" />

                            <Button
                                Grid.Column="1"
                                Width="200"
                                Height="40"
                                Margin="10"
                                HorizontalAlignment="Center"
                                Background="#2C2F80"
                                Click="Button_Click_1"
                                Command="{Binding SelectReportsCommand}"
                                Content="Select Related Reports"
                                Style="{StaticResource StandardButtonStyle}" />
                        </Grid>
                    </GroupBox>

                    <!--  Submit Button  -->
                    <Button
                        Width="200"
                        Height="40"
                        Margin="0,20,0,0"
                        HorizontalAlignment="Center"
                        Command="{Binding SubmitRequestCommand}"
                        Content="Submit Request"
                        IsEnabled="{Binding IsFormValid}">
                        <Button.Style>
                            <Style BasedOn="{StaticResource StandardButtonStyle}" TargetType="Button">
                                <Setter Property="Background" Value="#007646" />
                                <Setter Property="Foreground" Value="White" />
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#CCCCCC" />
                                        <Setter Property="Foreground" Value="#666666" />
                                        <Setter Property="Opacity" Value="0.7" />
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#005b35" />
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#004025" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>