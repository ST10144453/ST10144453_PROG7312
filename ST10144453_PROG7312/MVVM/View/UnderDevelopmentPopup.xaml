<Window
    x:Class="ST10144453_PROG7312.MVVM.View.UnderDevelopmentPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008/xaml"
    xmlns:local="clr-namespace:ST10144453_PROG7312.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="UnderDevelopmentPopup"
    Width="591"
    Height="433"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Grid>
        <!--  Image Background  -->
        <Image Source="pack://application:,,,/Resources/Images/HomePage/developmentPop.png" Stretch="UniformToFill" />

        <!--  Close Button  -->
        <Image
            Width="30"
            Height="30"
            Margin="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Cursor="Hand"
            MouseLeftButtonUp="CloseButton_Click"
            Source="pack://application:,,,/Resources/Icons/exitIcon.png" />
    </Grid>
</Window>